<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Empresa</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.display_name %></td>
        <td><%= user.email %></td>
        <td><%= user.company&.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>