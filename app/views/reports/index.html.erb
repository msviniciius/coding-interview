<h1>Relatórios</h1>

<%= button_to "Gerar Relatórios", generate_reports_path, method: :post, class: "btn btn-primary mb-3" %>

<% if @reports.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome do Relatório</th>
        <th>Tipo</th>
        <th>Data de Criação</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.name %></td>
          <td><%= report.report_type %></td>
          <td><%= report.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
            <%= link_to "Baixar", download_report_path(report.id), class: "btn btn-success btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhum relatório gerado ainda.</p>
<% end %>
